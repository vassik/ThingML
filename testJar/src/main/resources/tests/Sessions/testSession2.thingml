import "../thingml.thingml"

thing TestSession2 includes Test
@test "ABC # (ABC|ACB|BAC|BCA|CAB|CBA)"
{
	property ID : Char = '\'M\''

	message m(id : Char)
	message n(id : Char)

	internal port p	{
		sends m, n
		receives m, n
	}

	statechart Chart init INIT {

    	state INIT {
			internal
			event e : harnessIn?testIn
			action do
				ID = e.c
				fork s
                p!m(ID)
				ID = '\'M\''
			end

			internal
			event e : p?n
			action harnessOut!testOut(e.id)
    	}

		session s <5> init S1 {
			state S1 {
				transition -> S2
				event e : p?m
				guard e.id == ID
				action p!n(ID)
			}

			final state S2 {
			}
		}
    }
}
