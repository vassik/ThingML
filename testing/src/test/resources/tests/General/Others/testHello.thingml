import "../../thingml.thingml"


thing TestHello includes Test 
@test "hellohello # worldworld"
@test "hallo # w"
{
	statechart TestHello init H {
		internal event Test?Done
		action TestDone()
	
		state H {	
			transition -> E 
			event m : Test?In
			guard m.c == '\'h\''
			action TestOut('\'w\'')
			
			internal event m : Test?In
			guard not (m.c == '\'h\'')
			action TestFailure('\'A\'')
		}
		
		state E {
			transition -> L1 
			event m : Test?In
			guard m.c == '\'e\''
			action TestOut('\'o\'')
		}
		
		state L1 {
			transition -> L2 
			event m : Test?In
			guard m.c == '\'l\''
			action TestOut('\'r\'')
		}
		
		state L2 {
			transition -> O 
			event m : Test?In
			guard m.c == '\'l\''
			action TestOut('\'l\'')
		}
		
		state O {
			transition -> H 
			event m : Test?In
			guard m.c == '\'o\''
			action TestOut('\'d\'')
		}
	}
}
