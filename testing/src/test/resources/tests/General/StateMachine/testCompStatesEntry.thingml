import "../../thingml.thingml"
 
thing TestCompStatesEntry includes Test 
@test "t # IC1"
@test "tx # IC1I"
@test "t2121 # IC12121" 
@test "t21xt # IC121IC1"  
{
	statechart TestCompStatesEntry init I {
		internal event Test?Done
		action TestDone()
	 
		state I {
			on entry TestOut('\'I\'')
			transition -> CS
			event m : Test?In
			guard m.c == '\'t\''
		}
		 
		composite state CS init S1 {
		
		on entry TestOut('\'C\'')
		transition -> I
		event m : Test?In
		guard m.c == '\'x\''
		
			state S1 {
				on entry TestOut('\'1\'')
				transition -> S2
				event m : Test?In
				guard m.c == '\'2\''
			}
			
			state S2 {
				on entry TestOut('\'2\'')
				transition -> S1
				event m : Test?In
				guard m.c == '\'1\''
			}
		}
	}
}
