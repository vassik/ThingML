		action TestDone()
		
		state I {
			on entry TestOut('\'I\'')
			
			transition -> J
            		guard f()
			action TestOut('\'J\'')
						
			transition -> K
			event m : Test?In
			guard m.c == '\'t\''
		}
		state J {
			on entry TestOut('\'J\'')
			
			transition -> K
			event m : Test?In
			guard m.c == '\'t\''
		}
		state K {
			on entry TestOut('\'K\'')
			
			transition -> K
			event m : Test?In
			guard m.c == '\'t\''
		}
	}
}
