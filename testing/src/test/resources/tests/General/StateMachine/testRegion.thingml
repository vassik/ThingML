import "../../thingml.thingml"

thing TestRegion includes Test 
@test "t # (AI|IA)(BF|FB)"
@test "ttt # (AI|IA)(BF|FB)(AI|IA)(BF|FB)"
@test "tatzzat # (AI|IA)(BF|FB)I(AF|FA)BAI(BF|FB)"


{
	statechart TestRegion init I {
		internal event Test?Done
		action TestDone()
	                                  
		state I {
			on entry TestOut('\'I\'')
			transition -> F
			event m : Test?In
			guard m.c == '\'t\''
			transition -> F
			event m : Test?In
			guard m.c == '\'a\''
		}
		
		state F {
			on entry TestOut('\'F\'')
			transition -> I
			event m : Test?In
			guard m.c == '\'t\''
			transition -> I
			event m : Test?In
			guard m.c == '\'a\''
		}
		
		region R init A {
		
			state A {
				on entry TestOut('\'A\'')
				//on exit TestOut('\'X\'')
				transition -> B
				event m : Test?In
				guard m.c == '\'t\''
				transition -> B
				event m : Test?In
				guard m.c == '\'z\''
			}
		
			state B {
				on entry TestOut('\'B\'')
				//on exit TestOut('\'1\'')
				transition -> A
				event m : Test?In
				guard m.c == '\'t\''
				transition -> A
				event m : Test?In
				guard m.c == '\'z\''
			}
		}
	}
}